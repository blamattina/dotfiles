font-family = SauceCodePro NFM SemiBold
font-size = 16

theme = tokyonight

# Split creation
keybind = super+shift+d=new_split:right
keybind = super+d=new_split:down

# Seamless navigation between Ghostty splits and Neovim splits
# The performable: prefix only intercepts if a split exists in that direction
# Otherwise, the key passes through to Neovim for split navigation
keybind = performable:ctrl+h=goto_split:left
keybind = performable:ctrl+j=goto_split:down
keybind = performable:ctrl+k=goto_split:up
keybind = performable:ctrl+l=goto_split:right

# Split management
keybind = super+shift+z=toggle_split_zoom
keybind = super+shift+e=equalize_splits
